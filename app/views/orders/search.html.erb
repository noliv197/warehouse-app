<h1>Resultados da Busca por: <%= @code%></h1>

<% if @orders.empty?%>
    <span>Nenhum resultado encontrado</span>
<%else%>
    <span><%=@orders.count%> <%= Order.model_name.human(count: @orders.count)%> <%=I18n.translate(:found,count: @orders.count)%></span>
    <ul>
        <% @orders.each do |o|%>
            <li><%=link_to o.code, o%></li>
        <%end%>
    </ul>
<%end%>